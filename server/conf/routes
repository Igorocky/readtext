# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET         /styles.css                                    @controllers.HomeController.css
GET    /r                           controllers.HomeController.pageWithReact
POST    /changeLanguage                           controllers.LanguageController.changeLanguage
POST    /mergeText                           controllers.HomeController.mergeText
POST    /deleteText                           controllers.HomeController.deleteText
POST    /fullTextById                           controllers.HomeController.fullTextById
GET    /allTexts                           controllers.HomeController.allTexts

GET    /topics                           controllers.TopicController.topics
POST    /doAction                           controllers.TopicController.doAction
POST    /createParagraph                           controllers.TopicController.createParagraph
POST    /renameParagraph                           controllers.TopicController.renameParagraph
POST    /createTopic                           controllers.TopicController.createTopic
POST    /updateTopic                           controllers.TopicController.updateTopic
POST    /uploadTopicImage                           controllers.TopicController.uploadTopicImage
GET     /topicImg/:topicId/:fileName               controllers.TopicController.topicImg(topicId: Long, fileName: String)